{
  "out": "./dist/docs/",
  "theme": "pages-plugin",

  "entryPoints": [
    "./packages/cornerstone-render/src/index.ts",
    "./packages/cornerstone-tools/src/index.ts",
    "./packages/cornerstone-image-loader-streaming-volume/src/index.ts"
  ],
  "tsconfig": "./tsconfig.json",
  "exclude": [
    "**/examples/**",
    "**/*.tsx"
  ],

  "excludeExternals": false,
  "excludePrivate": false,
  "excludeProtected": false,
  "listInvalidSymbolLinks": true,

  "pages": {
    "groups": [{
      "title": "Documentation",
      "pages": [
        {
          "title": "Introduction",
          "source": "./docs/pages/introduction.md"
        },
        {
          "title": "Setup",
          "source": "./docs/pages/setup.md"
        },
        {
          "title": "Usage",
          "source": "./docs/pages/usage.md"
        },
        {
          "title": "Custom Tools",
          "source": "./docs/pages/custom-tools.md"
        }
      ]
    }],
    "output": "pages"
  }
}
